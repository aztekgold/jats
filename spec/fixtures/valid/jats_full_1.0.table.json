{
    "$schema": "https://raw.githubusercontent.com/aztekgold/jats/main/schema.json",
    "version": "1.0.0",
    "metadata": {
        "title": "Full Example",
        "description": "A comprehensive JATS table with all features"
    },
    "policy": {
        "permissions": {
            "allowAgentRead": true,
            "allowAgentCreate": true,
            "allowAgentUpdate": false,
            "allowAgentDelete": false
        }
    },
    "columns": [
        {
            "id": "col_a1b",
            "name": "Task",
            "type": "text",
            "description": "The name of the task",
            "display": {
                "width": 200
            },
            "constraints": {
                "required": true
            }
        },
        {
            "id": "col_c2d",
            "name": "Status",
            "type": "select",
            "constraints": {
                "options": [
                    {
                        "value": "Todo",
                        "color": "gray"
                    },
                    {
                        "value": "Doing",
                        "color": "blue"
                    },
                    {
                        "value": "Done",
                        "color": "green"
                    }
                ]
            }
        },
        {
            "id": "col_e3f",
            "name": "Due Date",
            "type": "date"
        },
        {
            "id": "col_g4h",
            "name": "Verified",
            "type": "boolean"
        }
    ],
    "views": [
        {
            "id": "view_x9z",
            "name": "Active Tasks",
            "description": "Tasks that are not done",
            "filters": [
                {
                    "id": "flt_y8w",
                    "columnId": "col_c2d",
                    "operator": "isNot",
                    "value": "Done"
                }
            ],
            "sorts": [
                {
                    "columnId": "col_e3f",
                    "direction": "asc"
                }
            ],
            "hiddenColumns": [],
            "columnOrder": [
                "col_a1b",
                "col_c2d",
                "col_e3f",
                "col_g4h"
            ]
        }
    ],
    "rows": [
        {
            "id": "123456789abc",
            "cells": {
                "col_a1b": "Buy milk",
                "col_c2d": "Todo",
                "col_g4h": false
            }
        },
        {
            "id": "123456789abd",
            "cells": {
                "col_a1b": "Walk dog",
                "col_c2d": "Doing",
                "col_g4h": true
            }
        }
    ]
}